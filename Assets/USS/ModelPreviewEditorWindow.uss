#model-preview-window {
	flex-direction: row;
	flex-grow: 1;
}

#viewport-container {
	flex-grow: 1;
}

#viewport {
	flex-grow: 1;
}

#hierarchy {
	width: 400px;
}

#viewport-stats {
	position: absolute;
	left: 10px;
	top: 10px;
	background-color: rgba(0, 0, 0, 0.2);
	border-radius: 0px;
	padding: 4px;
}

#viewport-stats Label {
	color: #ffffff;
	font-size: 13px;
	-unity-font-style: bold;
}

#uv-window {
	position: absolute;
	left: 10px;
	bottom: 10px;
}

#uv-image {
}

Toolbar {
	height: 22px;
}

.row {
	flex-direction: row;
}

.row__label {
	width: 80px;
}

.window-splitter {
	width: 2px;
	background-color: #191919;
}